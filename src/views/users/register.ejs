<%- include('../partials/head.ejs') %>
    <body>
        <%- include('../partials/header.ejs') %>
            <main class="register_main">
            <form action="/users/register" method="post" enctype="multipart/form-data" class="register_form">
                <div id="Formulario">
                    <h1>Formulario de Registro</h1>
                    <label for="firstName">Nombre *</label>
                    <input type="text" id="firstName" name="firstName" placeholder="Indique su nombre" class="Datos">
                    <label for="lastName">Apellido</label>
                    <input type="text" id="lastName" name="lastName" placeholder="Indique su apellido" class="Datos">
                    <label for="email">Email</label>
                    <input type="email" id="email" name="email" placeholder="Indique su email" class="Datos">
                    <label for="password">Contraseña</label>
                    <input type="password" name="password" placeholder="Creá tu nombre de usuario" class="Datos">
                    <div>
                        <label for="role" >Rol:</label>
                        <select name="role">
                            <option value="">Elegí</option>
                            <option value="admin">Administrador</option>
                            <option value="customer">Cliente</option>
                        </select>
                    </div>
                    <div>
                        <label for="imagen">Imagen de usuario</label>
                        <input type="file" id="avatar" name="avatar">
                    </div>
                    <div id="Button">
                    <button class="boton">REGISTRARSE</button>
                    </div>
                </div>
            </form>
        </main>
            <%- include('../partials/footer.ejs') %>
    </body>

</html>
</body>

</html>