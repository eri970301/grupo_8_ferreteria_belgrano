                    <h2>BIENVENIDO CLIENTE FERRETERIA BELGRANO</h2><a href="http://" class="product_link_title">Ver más</a>
                </div>
                <section class="product_recomended">
                    <% users.forEach(user => { %>
                        <article class="product_carousel">
                          <div class="product_carousel_card">
                            <img src="/img/users/<%= user.avatar %>">
