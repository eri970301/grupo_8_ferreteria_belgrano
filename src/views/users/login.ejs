    <body>
        <%- include('../partials/header.ejs') %>
            <main class="login_main">
                <form action="/users/login" method="POST" class="login_form">
                    <div id="Formulario">
                        <h1 class="h1">Clientes registrados</h1>
                    
                        <div class="email">
                            <label for="email"> Email: </label>
                      
                            <input type="email" name="email" placeholder="Escriba aquí su email" id="Input" required>
                        </div>
                       
                        <div>
                            <label for="password"> Contraseña: </label>
                          
                            <input type="password" name="password" placeholder="Escriba aquí su contraseña" id="Input"
                                required>
                        </div>
                        <div id="rememberMe">
                            <label for="rememberMe"> Recordame </label>
                            <input type="checkbox" name="recordame" id="checkbox">
                        </div>

                  
                
                        
                        <div class="Botones">
                            <input type="reset" value="Borrar todo" id="Botones">
                            <input type="submit" value="Enviar" id="Botones">
                        </div>
                        <h5 class="subti">¿Aún no tienes una cuenta?</h5>
                     
                        
                        <hr width=200>
                        <a href="/users/register">
                            <link class="regist">Registrarse</link>
                        </a>
                     
                    </div>
                </form>
      
              
            </main>
            <%- include('../partials/footer.ejs') %>
