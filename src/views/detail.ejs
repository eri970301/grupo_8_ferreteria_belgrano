<!DOCTYPE html>
<html lang="es">
<%- include('partials/head.ejs', {title: 'Detalle Producto' }) %>
	<body>
		<%- include('partials/header.ejs') %>
			<!-- product detail -->
			<div class="container products-wrapper">
					<div class="col-12">
						<h2 class="products-title"><%= product.name %>
						</h2>
					</div>
				<div class="product-detail">
					<div class="row">
						<div class="col-12 col-lg-8">
							<img src="/img/<%= product.image %>" alt="product image" class="product-detail-img">
							<% if(product.discount> 0) {
									let finalPrice = (product.price * ((100 - product.discount) / 100)).toFixed(0)
									%>
									<p class="product-detail-price small">
										<span> $ <%= product.price %></span>
										/
										<b>
											<%= product.discount %>% OFF
										</b>
									</p>
									<p class="product-detail-price">
										$<%= finalPrice %>
									</p>
									<% } else { %>
										<p class="product-detail-price">
											$<%= product.price %>
										</p>
										<% } %>
										<ul class="payment">
												<li class="payment_tabs_tab">
													<i class="fas fa-credit-card"></i>
													<p>Pag√° en 12 cuotas sin interes</p>
												</li>
												<li class="payment_tabs_tab">
													<i class="fas fa-store"></i>
													<p>Retiro gratis en locales del vendedor</p>
												</li>
											</ul>

											<a href="#" class="buy-now-button">COMPRAR AHORA</a>
							<p class="product-detail-description">
								<%= product.description %>
							</p>
						</div>
						<div class="col-12 col-lg-4">
							<article class="product-detail-info">
								<h2 class="product-detail-title">
									<%= product.name %>
								</h2>
								

									
											<hr>

											<a href="/products/edit/<%= product.id %>" class="action-button edit">EDITAR
												PRODUCTO</a>
											<form action="/products/delete/<%= product.id %>?_method=DELETE"
												method="POST" style="display: inline-flex">
												<button type="submit" class="action-button delete">ELIMINAR</button>
											</form>
							</article>
						</div>
					</div>
				</div>
			</div>
			<!-- /product detail -->

			<!-- footer -->
			<%- include('partials/footer.ejs') %>
				<!-- /footer -->

	</body>

</html>